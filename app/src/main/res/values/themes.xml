<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme enforcing light mode. -->
    <style name="Base.Theme.Patra" parent="Theme.Material3.Light.NoActionBar">
        <!-- Ensure the light theme settings override any dark mode settings. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <!-- Force light mode -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.Patra" parent="Base.Theme.Patra"/>
</resources>
