<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/screen_padding_horizontal">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="@dimen/icon_xl"
                android:layout_height="@dimen/icon_xl"
                android:background="@drawable/soft_card_background"
                android:padding="@dimen/spacing_sm"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                app:tint="@color/textPrimary"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Trust Dashboard"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_title"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_background_green"
                android:paddingHorizontal="@dimen/spacing_sm"
                android:paddingVertical="@dimen/spacing_xs"
                android:text="âœ“ Verified"
                android:textColor="@color/cardBackground"
                android:textSize="@dimen/text_overline"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Total Balance Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_xl">

                <TextView
                    android:id="@+id/totalBalanceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Total Balance"
                    android:textColor="@color/white60"
                    android:textSize="@dimen/text_body_small" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/totalBalanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="0.00"
                        android:textColor="@color/white"
                        android:textSize="42sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:text="LYX"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/text_title"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:text="ðŸ”’ Secured on Blockchain"
                    android:textColor="@color/white60"
                    android:textSize="@dimen/text_caption" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Trust Badges -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/trustBadgesLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <!-- Mining Stats -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="MINING STATISTICS"
            android:textColor="@color/textTertiary"
            android:textSize="@dimen/text_overline"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:orientation="horizontal">

            <!-- Sessions -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_sm"
                app:cardBackgroundColor="@color/cardBackground"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:id="@+id/miningSessionsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sessions"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_caption" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Total Mined -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/spacing_xs"
                app:cardBackgroundColor="@color/cardBackground"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:id="@+id/totalMinedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 LYX"
                        android:textColor="@color/accentGreen"
                        android:textSize="@dimen/text_body"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Mined"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_caption" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Daily Average -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_sm"
                app:cardBackgroundColor="@color/cardBackground"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:id="@+id/avgDailyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/text_body"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg/Day"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_caption" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Earnings Breakdown -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="EARNINGS BREAKDOWN"
            android:textColor="@color/textTertiary"
            android:textSize="@dimen/text_overline"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="@dimen/corner_radius_md"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- Referral Earnings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¥"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:text="Referral Earnings"
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/text_body_small" />

                    <TextView
                        android:id="@+id/referralEarningsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00 LYX"
                        android:textColor="@color/accentGreen"
                        android:textSize="@dimen/text_body_small"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/spacing_md"
                    android:background="@color/borderColor" />

                <!-- Bonus Earnings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:text="Bonus Rewards"
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/text_body_small" />

                    <TextView
                        android:id="@+id/bonusEarningsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00 LYX"
                        android:textColor="@color/accentGreen"
                        android:textSize="@dimen/text_body_small"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="@dimen/spacing_md"
                    android:background="@color/borderColor" />

                <!-- Games Earnings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ®"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:text="Games &amp; Spins"
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/text_body_small" />

                    <TextView
                        android:id="@+id/gamesEarningsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00 LYX"
                        android:textColor="@color/accentGreen"
                        android:textSize="@dimen/text_body_small"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Mainnet Countdown -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="MAINNET LAUNCH"
            android:textColor="@color/textTertiary"
            android:textSize="@dimen/text_overline"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardBackgroundColor="@color/cardBackgroundElevated"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <TextView
                    android:id="@+id/mainnetStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â³ Mainnet Launch"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold" />

                <!-- Countdown -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Days -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mainnetDaysText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/soft_card_background"
                            android:paddingHorizontal="@dimen/spacing_lg"
                            android:paddingVertical="@dimen/spacing_md"
                            android:text="00"
                            android:textColor="@color/textPrimary"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:text="Days"
                            android:textColor="@color/textSecondary"
                            android:textSize="@dimen/text_caption" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/spacing_sm"
                        android:text=":"
                        android:textColor="@color/textSecondary"
                        android:textSize="28sp" />

                    <!-- Hours -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mainnetHoursText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/soft_card_background"
                            android:paddingHorizontal="@dimen/spacing_lg"
                            android:paddingVertical="@dimen/spacing_md"
                            android:text="00"
                            android:textColor="@color/textPrimary"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:text="Hours"
                            android:textColor="@color/textSecondary"
                            android:textSize="@dimen/text_caption" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/spacing_sm"
                        android:text=":"
                        android:textColor="@color/textSecondary"
                        android:textSize="28sp" />

                    <!-- Minutes -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mainnetMinutesText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/soft_card_background"
                            android:paddingHorizontal="@dimen/spacing_lg"
                            android:paddingVertical="@dimen/spacing_md"
                            android:text="00"
                            android:textColor="@color/textPrimary"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:text="Mins"
                            android:textColor="@color/textSecondary"
                            android:textSize="@dimen/text_caption" />
                    </LinearLayout>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/mainnetProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:max="100"
                    android:progress="25"
                    android:progressDrawable="@drawable/progress_gradient" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="Keep mining to maximize your tokens!"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_caption" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Withdrawal Preview Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/withdrawalCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="0dp"
            app:strokeColor="@color/gold"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’°"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/withdrawalStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coming Soon"
                            android:textColor="@color/gold"
                            android:textSize="@dimen/text_body"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/withdrawalInfoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Withdrawals will be enabled after mainnet launch"
                            android:textColor="@color/textSecondary"
                            android:textSize="@dimen/text_caption" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/withdrawalBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_md"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:enabled="false"
                    android:text="Not Yet Available"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/cardBackgroundElevated"
                    app:cornerRadius="@dimen/corner_radius_md" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Transaction History -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="RECENT ACTIVITY"
            android:textColor="@color/textTertiary"
            android:textSize="@dimen/text_overline"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <TextView
            android:id="@+id/noTransactionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:gravity="center"
            android:padding="@dimen/spacing_xl"
            android:text="No recent activity"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_body_small"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/transactionRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:nestedScrollingEnabled="false" />

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxxl" />

    </LinearLayout>
</ScrollView>

