<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/screen_padding_horizontal">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="@dimen/icon_xl"
                android:layout_height="@dimen/icon_xl"
                android:background="@drawable/soft_card_background"
                android:padding="@dimen/spacing_sm"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                app:tint="@color/textPrimary"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Login Calendar"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/weekTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_background_gold"
                android:paddingHorizontal="@dimen/spacing_md"
                android:paddingVertical="@dimen/spacing_xs"
                android:text="Week 1"
                android:textColor="@color/cardBackground"
                android:textSize="@dimen/text_caption"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Progress Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly Progress"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_caption"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/weekProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_gradient" />

                <TextView
                    android:id="@+id/totalWeeksText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text=""
                    android:textColor="@color/gold"
                    android:textSize="@dimen/text_caption"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Calendar Days -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="7-DAY LOGIN REWARDS"
            android:textColor="@color/textTertiary"
            android:textSize="@dimen/text_overline"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <LinearLayout
            android:id="@+id/daysContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:orientation="vertical" />

        <!-- Weekly Bonus Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/weeklyBonusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_lg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ†"
                    android:textSize="32sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weekly Bonus"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_body"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complete all 7 days!"
                        android:textColor="@color/white60"
                        android:textSize="@dimen/text_caption" />
                </LinearLayout>

                <TextView
                    android:id="@+id/weeklyBonusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="+50 LYX"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/text_title"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Claim Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/claimTodayBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_lg"
            android:layout_marginTop="@dimen/spacing_xl"
            android:fontFamily="sans-serif-medium"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Claim Today's Reward"
            android:textAllCaps="false"
            android:textSize="@dimen/text_body"
            android:textStyle="bold"
            app:backgroundTint="@color/accentGreen"
            app:cornerRadius="@dimen/corner_radius_lg"
            app:elevation="0dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxxl" />

    </LinearLayout>
</ScrollView>

