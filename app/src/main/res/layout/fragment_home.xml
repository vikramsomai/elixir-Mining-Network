<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.somai.elixirMiningNetwork.HomeFragment">

    <LinearLayout
        android:background="#f3f5f4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">
    <RelativeLayout
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="#f3f5f4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileCircleImageView"
        android:layout_width="50dp"
        android:background="#f3f5f4"
        android:layout_height="50dp"
        app:civ_border_width="1dp"
        android:src="@drawable/profileuser"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:background="#f3f5f4"
        android:layout_width="wrap_content"
        android:layout_marginLeft="65dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/usernameTextView"
            style="@style/viewParent.headerText"
            android:text="Unkonwn"
            android:textSize="18sp"
            android:background="#f3f5f4"
            android:textStyle="bold"
            android:layout_toRightOf="@id/profileCircleImageView"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/level"
            style="@style/viewParent.headerText"
            android:text="Level 1"
            android:textStyle="bold"
            android:background="#f3f5f4"
            android:textSize="12sp"
            android:layout_toRightOf="@id/profileCircleImageView"
            android:layout_marginTop="0dp"/>
    </LinearLayout>
    </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FFF"
            app:strokeWidth="0dp"
            android:background="@drawable/rounded__card_shape"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="70dp">

<ImageView
    android:layout_width="40dp"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="40dp"
    android:src="@drawable/blockchain"
    android:layout_height="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Testnet Is coming"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginLeft="100dp"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            app:strokeWidth="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="190dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:backgroundTint="#FFF"
               app:strokeWidth="0dp"
               android:padding="10dp"
               android:background="@drawable/rounded__card_shape"
               android:layout_height="match_parent">
               <TextView
                   android:layout_width="wrap_content"
                   android:text="Quick actions"
                   android:paddingBottom="10dp"
                   android:layout_height="wrap_content"/>
  <GridLayout
      android:layout_width="match_parent"
      android:columnCount="4"

      android:useDefaultMargins="true"
      android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                app:strokeWidth="0dp"
                android:padding="10dp"
                android:id="@+id/wallet"
                android:layout_height="60dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/wallet"
                        android:layout_height="40dp"/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:text="Wallet"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                app:strokeWidth="0dp"
                android:id="@+id/kyc"
                android:padding="20dp"
                android:layout_marginLeft="30dp"
                android:layout_height="60dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/kyc"
                        android:layout_height="40dp"/>
                    <TextView
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:text="Kyc"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                app:strokeWidth="0dp"
                android:id="@+id/airdrop"
                android:layout_marginLeft="30dp"
                android:padding="10dp"
                android:layout_height="60dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/airdrop"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Airdrop"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
      <com.google.android.material.card.MaterialCardView
          android:layout_width="wrap_content"
          app:strokeWidth="0dp"
          android:id="@+id/stakeing"
          android:layout_marginLeft="30dp"
          android:padding="10dp"
          android:layout_height="60dp">
          <LinearLayout
              android:orientation="vertical"
              android:textAlignment="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <ImageView
                  android:layout_width="40dp"
                  android:layout_gravity="center"
                  android:src="@drawable/stake"
                  android:layout_height="40dp"/>
              <TextView

                  android:layout_width="wrap_content"
                  android:text="Stake"
                  android:layout_height="wrap_content"/>
          </LinearLayout>
      </com.google.android.material.card.MaterialCardView>
      <com.google.android.material.card.MaterialCardView
          android:layout_width="wrap_content"
          app:strokeWidth="0dp"
          android:layout_marginTop="15dp"
          android:id="@+id/airdrop"
          android:layout_marginLeft="5dp"
          android:padding="10dp"
          android:layout_height="60dp">
          <LinearLayout
              android:orientation="vertical"
              android:textAlignment="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <ImageView
                  android:layout_width="40dp"
                  android:layout_gravity="center"
                  android:src="@drawable/shuttle"
                  android:layout_height="40dp"/>
              <TextView

                  android:layout_width="wrap_content"
                  android:text="Boost"
                  android:layout_height="wrap_content"/>
          </LinearLayout>
      </com.google.android.material.card.MaterialCardView>
           </GridLayout>

           </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:backgroundTint="#1c2336"
    app:strokeWidth="0dp"
    android:background="@drawable/rounded__card_shape"
    android:layout_height="70dp">
    <TextView
        android:layout_width="wrap_content"
        android:text="Streak: "
        android:textColor="#fff"
        android:textAlignment="center"

        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="0"
        android:id="@+id/countStreak"
        android:textColor="#fff"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:background="#1c2336"
        android:paddingLeft="90dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="120dp"
        android:id="@+id/claimToken"
        android:clickable="true"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="10dp"
        android:layout_height="50dp">
   <com.google.android.material.button.MaterialButton
       android:layout_width="120dp"
       android:text="Claim"
       android:id="@+id/claimbtn"
       android:textColor="#000"
       android:background="#ffffff"
       android:textStyle="bold"
       android:textSize="18dp"
       android:layout_height="50dp"/>

    </com.google.android.material.card.MaterialCardView>
</com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</FrameLayout>