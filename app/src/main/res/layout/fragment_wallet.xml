<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WalletFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet"
            android:textSize="20dp"
            android:paddingLeft="25dp"
            android:textStyle="bold"
            android:paddingTop="10dp" />
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    app:strokeWidth="0dp"
    android:layout_marginLeft="20dp"
    android:background="@drawable/rounded__card_shape"
    android:layout_marginRight="20dp"
    android:backgroundTint="#1c2336"
    android:layout_height="150dp">
   <RelativeLayout
       android:backgroundTint="#1c2336"
       android:layout_width="170dp"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:text="0x112f...43941D"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"
           android:textSize="16dp"
           android:textStyle="bold"
           android:id="@+id/cryptoAddress"
           android:backgroundTint="#1c2336"
           android:textColor="#fff"

           android:layout_height="wrap_content"/>
       <ImageView
           android:layout_width="20dp"
           android:layout_marginTop="20dp"
           android:id="@+id/copyAddress"
           android:backgroundTint="#1c2336"
           android:layout_alignParentEnd="true"
           android:src="@drawable/copy"
           android:layout_height="20dp"/>
   </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="$0.00"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:backgroundTint="#1c2336"
        android:textColor="#fff"

        android:layout_height="wrap_content"/>
</com.google.android.material.card.MaterialCardView>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_margin="20dp"

    android:layout_height="100dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="150dp"
        android:layout_height="45dp"

        android:background="@color/cardBackground"
        android:backgroundTint="#1c2336"
        app:layout_constraintEnd_toStartOf="@+id/materialCardView"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeWidth="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="#1c2336"
            android:src="@drawable/recieve" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="11dp"
            android:backgroundTint="#1c2336"
            android:text="Recieve"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="150dp"

        android:layout_height="45dp"
        android:layout_marginEnd="4dp"
        android:background="#ffde59"
        android:backgroundTint="#ffde59"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeWidth="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#ffde59"
            android:src="@drawable/send" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="11dp"
            android:backgroundTint="#ffde59"
            android:text="Send"
            android:textColor="@color/cardBackground"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</FrameLayout>