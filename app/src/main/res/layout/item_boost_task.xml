<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/soft_card_background"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="14dp">

    <!-- Task Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/taskTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Title"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:ellipsize="end"/>

            <ImageView
                android:id="@+id/checkmark"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_check"
                app:tint="@color/accentGreen"
                android:visibility="gone"
                android:contentDescription="Completed"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/taskDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: 3 hrs"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/taskMultiplier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="x1.25"
                android:textColor="@color/accentGreen"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Claim Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/claimTaskBoostBtn"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:minWidth="72dp"
        android:paddingHorizontal="14dp"
        android:text="Claim"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-medium"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="@color/colorPrimary"
        app:cornerRadius="10dp"
        app:elevation="0dp"
        app:strokeWidth="0dp"/>
</LinearLayout>

