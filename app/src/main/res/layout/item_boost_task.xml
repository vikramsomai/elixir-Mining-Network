<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_sm"
    app:cardBackgroundColor="@color/cardBackground"
    app:cardCornerRadius="@dimen/corner_radius_md"
    app:cardElevation="0dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_md">

        <!-- Task Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/taskTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Title"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/text_body_small"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <ImageView
                    android:id="@+id/checkmark"
                    android:layout_width="@dimen/icon_xs"
                    android:layout_height="@dimen/icon_xs"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:src="@drawable/ic_check"
                    app:tint="@color/accentGreen"
                    android:visibility="gone"
                    android:contentDescription="Completed"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/taskDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration: 3 hrs"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_caption"/>

                <TextView
                    android:id="@+id/taskMultiplier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:text="Ã—1.25"
                    android:textColor="@color/accentGreen"
                    android:textSize="@dimen/text_caption"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Claim Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/claimTaskBoostBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_sm"
            android:minWidth="72dp"
            android:paddingHorizontal="@dimen/spacing_md"
            android:text="Claim"
            android:textSize="@dimen/text_caption"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="@dimen/corner_radius_sm"
            app:elevation="0dp"
            app:strokeWidth="0dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

