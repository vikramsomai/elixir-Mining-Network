<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.somai.elixirMiningNetwork.ReferralFragment">
    <LinearLayout
        android:padding="16dp"
        android:background="#f3f5f4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Referral"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:padding="10dp" />
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/referralimg"
            android:layout_height="250dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Refer and Increase \n Mining Speed"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Unknown"
            android:layout_marginTop="20dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:id="@+id/referralCode"
            android:layout_height="wrap_content"/>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:text="Your referrals"
           android:padding="20dp"
           android:textSize="18dp"
           android:textStyle="bold"
           android:layout_height="wrap_content"/>
       <TextView
           android:layout_width="wrap_content"
           android:text="0"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="20dp"
           android:textSize="18dp"
           android:layout_marginRight="20dp"
           android:textStyle="bold"
           android:layout_gravity="center"
           android:id="@+id/referralcount"
           android:layout_height="wrap_content"/>
   </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#fff"
            android:background="@drawable/rounded__card_shape"
            android:layout_height="60dp">

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</FrameLayout>