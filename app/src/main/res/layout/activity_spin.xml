<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".spinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroundColor">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backNav"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                android:padding="10dp"
                android:background="@drawable/rounded_background"
                android:onClick="onBackPressed"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/spinCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spins left: 4/4"
                android:textSize="16sp"
                android:textColor="@color/gold"
                android:background="@drawable/rounded_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spin the wheel to win rewards!"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <network.lynx.app.SpinWheelView
                android:id="@+id/spinnerView"
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow"
                android:rotation="90"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-20dp"
                android:tint="@color/gold" />
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="40dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#F3722C">

            <Button
                android:id="@+id/spinBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="SPIN NOW"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="?android:attr/selectableItemBackground" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>