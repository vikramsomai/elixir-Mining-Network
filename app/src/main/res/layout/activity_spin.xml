<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_marginTop="@dimen/spacing_xl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:paddingVertical="@dimen/spacing_md"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backNav"
            android:layout_width="@dimen/icon_xl"
            android:layout_height="@dimen/icon_xl"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:padding="@dimen/spacing_sm"
            android:background="@drawable/soft_card_background"
            app:tint="@color/textPrimary"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lucky Spin"
            android:textSize="@dimen/text_title"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:layout_marginStart="@dimen/spacing_md"
            android:fontFamily="sans-serif-medium"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/soft_card_background"
            android:paddingHorizontal="@dimen/spacing_md"
            android:paddingVertical="@dimen/spacing_sm"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/icon_xs"
                android:layout_height="@dimen/icon_xs"
                android:src="@drawable/ic_spin"
                app:tint="@color/gold"
                android:layout_marginEnd="@dimen/spacing_xs"
                android:contentDescription="Spins"/>

            <TextView
                android:id="@+id/spinCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/5"
                android:textSize="@dimen/text_body_small"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Reward Info Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@color/cardBackground"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/soft_icon_background"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_gift"
                    app:tint="@color/gold"
                    android:contentDescription="Reward"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/rewardInfoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spin to win rewards!"
                    android:textSize="15sp"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/spinHintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Watch ad to unlock spin"
                    android:textSize="12sp"
                    android:textColor="@color/textSecondary"/>
            </LinearLayout>

            <TextView
                android:id="@+id/lastWinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/soft_card_background"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:text="+2.5 LYX"
                android:textSize="13sp"
                android:textColor="@color/accentGreen"
                android:textStyle="bold"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Wheel Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="24dp">

        <!-- Wheel glow background -->
        <View
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:background="@drawable/soft_icon_background"
            android:alpha="0.3"/>

        <network.lynx.app.SpinWheelView
            android:id="@+id/spinnerView"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_gravity="center"/>

        <!-- Pointer -->
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/arrow"
            android:rotation="90"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="20dp"
            app:tint="@color/gold"
            android:contentDescription="Pointer"/>
    </FrameLayout>

    <!-- Bottom Action Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_xxl"
        android:paddingTop="@dimen/spacing_lg"
        android:paddingBottom="@dimen/spacing_xxxl"
        android:gravity="center">

        <!-- Spin Button with gradient background -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/spinBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_lg"
            android:text="ðŸŽ¡  SPIN NOW"
            android:textSize="@dimen/text_subtitle"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="@dimen/corner_radius_lg"
            app:elevation="0dp"
            app:rippleColor="@color/rippleLight"
            app:strokeWidth="0dp"/>

        <!-- Rewards hint -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ Win up to "
                android:textSize="@dimen/text_caption"
                android:textColor="@color/textSecondary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 LYX"
                android:textSize="@dimen/text_caption"
                android:textColor="@color/gold"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" per spin!"
                android:textSize="@dimen/text_caption"
                android:textColor="@color/textSecondary"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

