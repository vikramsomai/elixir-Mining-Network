                            android:textSize="12sp"
                            android:textColor="@color/textSecondary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/silverBoxBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
