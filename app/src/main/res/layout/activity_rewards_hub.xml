                        android:layout_height="wrap_content"
                        android:text="Next: 2h 30m"
                        android:textSize="12sp"
                        android:textColor="@color/textSecondary" />
                </LinearLayout>

                <TextView
                    android:id="@+id/rushMultiplier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
