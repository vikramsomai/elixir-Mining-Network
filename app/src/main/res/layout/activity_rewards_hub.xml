<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/backNav"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŽ Rewards Hub"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:gravity="center"
                android:layout_marginEnd="40dp" />
        </LinearLayout>

        <!-- Hourly Bonus Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/hourlyBonusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â° Hourly Bonus"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:id="@+id/hourlyClaimsLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4/4 left"
                        android:textSize="12sp"
                        android:textColor="@color/textSecondary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hourlyBonusTimer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="03:45:22"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/hourlyBonusAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="~1.5 LYX"
                            android:textSize="14sp"
                            android:textColor="@color/textSecondary" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/claimHourlyBonusBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Claim"
                        android:textAllCaps="false"
                        app:cornerRadius="12dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Lucky Number Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/luckyNumberCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ² Daily Lucky Number"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary" />

                <TextView
                    android:id="@+id/luckyNumberStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guess 1-10 for a chance to win up to 3x mining!"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:id="@+id/numberPickerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/luckyNumberResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/playLuckyNumberBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pick Your Lucky Number!"
                    android:textAllCaps="false"
                    android:layout_marginTop="12dp"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Scratch Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/scratchCardCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŽ« Scratch Cards"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:id="@+id/scratchCardCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 cards"
                        android:textSize="12sp"
                        android:textColor="@color/textSecondary"
                        android:background="@drawable/badge_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/scratchCardResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/earnScratchCardBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Earn Card"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/scratchCardBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Scratch!"
                        android:textAllCaps="false"
                        app:cornerRadius="12dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Mining Streak Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/miningStreakCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ Mining Streak"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/streakDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ± 0 days"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/streakMultiplier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0x Bonus"
                        android:textSize="16sp"
                        android:textColor="@color/textSecondary" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/streakProgress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="12dp"
                    android:progress="0"
                    android:progressTint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/streakNextMilestone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 days to ðŸŒ¿ Sprout"
                    android:textSize="12sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Achievements Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/achievementsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ… Achievements"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:id="@+id/achievementCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/20"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/achievementProgress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="12dp"
                    android:progress="0"
                    android:progressTint="@color/gold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/achievementBonus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+0% Permanent Boost"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/viewAchievementsBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        app:cornerRadius="12dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tips Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Tip: Mine daily to build your streak and unlock bigger multipliers!"
            android:textSize="12sp"
            android:textColor="@color/textTertiary"
            android:gravity="center"
            android:padding="16dp" />

    </LinearLayout>
</ScrollView>

