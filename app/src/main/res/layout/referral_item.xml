<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="#2A3048"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- User Avatar with Gradient Border -->
        <androidx.cardview.widget.CardView
            android:id="@+id/avatarContainer"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/userAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user_man"
                android:scaleType="centerCrop"
                android:background="@drawable/gradient_circle_background"/>
        </androidx.cardview.widget.CardView>

        <!-- User Info -->
        <LinearLayout
            android:id="@+id/userInfoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/avatarContainer"
            app:layout_constraintEnd_toStartOf="@id/statusContainer"
            app:layout_constraintTop_toTopOf="@id/avatarContainer">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/joinDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joined Apr 15, 2025"
                android:textColor="#CCFFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Status and Earnings -->
        <LinearLayout
            android:id="@+id/statusContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/avatarContainer">

            <TextView
                android:id="@+id/totalEarned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0.00 LYX"
                android:textColor="@color/gold"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/userStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inactive"
                android:textColor="#FF5252"
                android:textSize="14sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:background="@drawable/status_background_inactive"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/avatarContainer"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pingButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="PING"
                android:textSize="14sp"
                android:textColor="@color/white"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:cornerRadius="12dp"
                app:backgroundTint="#FF7043"
                android:layout_marginEnd="8dp"/>

<!--            <com.google.android.material.button.MaterialButton-->
<!--                android:id="@+id/viewDetailsButton"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="48dp"-->
<!--                android:layout_weight="1"-->
<!--                android:text="DETAILS"-->
<!--                android:textSize="14sp"-->
<!--                android:textColor="@color/white"-->

<!--                app:iconTint="@color/white"-->
<!--                app:iconGravity="textStart"-->
<!--                app:cornerRadius="12dp"-->
<!--                app:backgroundTint="#3F51B5"-->
<!--                android:layout_marginStart="8dp"/>-->
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>