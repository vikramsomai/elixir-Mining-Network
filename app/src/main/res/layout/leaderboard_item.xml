<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/medal_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone" />

<!--    <ImageView-->
<!--        android:id="@+id/lead_img"-->
<!--        android:layout_width="50dp"-->
<!--        android:layout_height="50dp"-->
<!--        android:src="@drawable/user_man" />-->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_height="wrap_content">
        <com.lelloman.identicon.view.ClassicIdenticonView
            android:layout_width="50dp"
            android:id="@+id/lead_img"
            android:layout_height="50dp"
            android:background="@drawable/rounded__card_shape"
            app:hash="125634585" />
        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/lead_username"
        android:layout_width="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="Username"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/lead_coins"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:textColor="#fff" />
</LinearLayout>