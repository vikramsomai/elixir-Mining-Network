<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/screen_padding_horizontal"
        android:paddingTop="@dimen/spacing_xl"
        android:paddingBottom="@dimen/spacing_xxxl"
        android:gravity="center_horizontal">

        <!-- Mining Neural Blob -->
        <FrameLayout
            android:id="@+id/miningBlobContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false">

            <network.lynx.app.MiningBlobView
                android:id="@+id/miningblow"
                android:layout_width="@dimen/mining_blob_size"
                android:layout_height="@dimen/mining_blob_size"
                android:layout_gravity="center" />

            <!-- Center Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/mining_text_bg"
                android:paddingHorizontal="@dimen/spacing_xl"
                android:paddingVertical="@dimen/spacing_md">

                <TextView
                    android:id="@+id/miningPer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap to Start"
                    android:textSize="@dimen/text_subtitle"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>

            </LinearLayout>
        </FrameLayout>

        <!-- Balance Card - Clean minimal design -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacing_xxl"
            android:paddingVertical="@dimen/spacing_lg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:textSize="@dimen/text_caption"
                android:textColor="@color/textSecondary"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:textAllCaps="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/spacing_sm">

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0000"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="-0.02"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" LYX"
                    android:textSize="@dimen/text_body"
                    android:textColor="@color/textTertiary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="@dimen/spacing_xs"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Stats Row - Clean card design -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_lg">

                <!-- Time Left -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TIME LEFT"
                        android:textSize="@dimen/text_overline"
                        android:textColor="@color/textTertiary"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"/>

                    <TextView
                        android:id="@+id/timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00:00"
                        android:textSize="@dimen/text_title"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:fontFamily="monospace"
                        android:layout_marginTop="@dimen/spacing_xs"/>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/divider"/>

                <!-- Mining Rate -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RATE"
                        android:textSize="@dimen/text_overline"
                        android:textColor="@color/textTertiary"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"/>

                    <TextView
                        android:id="@+id/miningrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00/h"
                        android:textSize="@dimen/text_title"
                        android:textStyle="bold"
                        android:textColor="@color/accentGreen"
                        android:layout_marginTop="@dimen/spacing_xs"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Boost Button - Premium design -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/boost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xxl"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#1A00CED1"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="@dimen/spacing_lg"
                android:paddingHorizontal="@dimen/spacing_xl">

                <ImageView
                    android:layout_width="@dimen/icon_md"
                    android:layout_height="@dimen/icon_md"
                    android:src="@drawable/ic_zap"
                    app:tint="#00CED1"
                    android:layout_marginEnd="@dimen/spacing_md"
                    android:contentDescription="Boost"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Watch Ad for 2× Boost"
                    android:textColor="#00CED1"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="@dimen/icon_xs"
                    android:layout_height="@dimen/icon_xs"
                    android:src="@drawable/arrow"
                    app:tint="#00CED1"
                    android:contentDescription="Go"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Invite Button - Subtle but touchable -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/corner_radius_md"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="@dimen/spacing_lg">

                <ImageView
                    android:layout_width="@dimen/icon_sm"
                    android:layout_height="@dimen/icon_sm"
                    android:src="@drawable/ic_share"
                    app:tint="@color/textSecondary"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:contentDescription="Share"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invite Friends"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_body_small"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" · +10% Bonus"
                    android:textColor="@color/accentGreen"
                    android:textSize="@dimen/text_body_small"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Hidden status elements for compatibility -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/miningStatusText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/miningSubtext"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>

