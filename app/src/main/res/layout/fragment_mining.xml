<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.somai.elixirMiningNetwork.MiningFragment">

    <LinearLayout
        android:background="#f3f5f4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mining Area"
            android:background="#f3f5f4"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:padding="10dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFF"
            app:strokeWidth="0dp"
            android:background="@drawable/rounded__card_shape"
            android:layout_height="100dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="Elixir coin: "

                android:textAlignment="center"
                android:paddingTop="32dp"
                android:paddingLeft="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView

                android:layout_width="wrap_content"
                android:text="0"
                android:id="@+id/totalcoinsValue"

                android:textAlignment="center"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="120dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_margin="5dp"
            android:backgroundTint="#FFF"
            app:strokeWidth="0dp"
            android:background="@drawable/rounded__card_shape">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Next Mining Start in:"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/miningTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="03:59:59"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FFF"
            app:strokeWidth="0dp"
            android:background="@drawable/rounded__card_shape"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="16dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/counterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0000"
        android:textSize="30sp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:padding="0dp" />

</RelativeLayout>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:id="@+id/startButton"
    android:layout_gravity="center"
    android:backgroundTint="#1c2336"
    android:layout_marginTop="30dp"
    android:background="@drawable/rounded__card_shape"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:text="Start Mining"
        android:backgroundTint="#1c2336"
        android:padding="15dp"
        android:textColor="#fff"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
</com.google.android.material.card.MaterialCardView>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
<!--        <com.google.android.material.button.MaterialButton-->
<!--            android:id="@+id/claimRewardsButton"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Collect rewards"-->
<!--            android:backgroundTint="#8C52FF"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginTop="16dp" />-->
    </LinearLayout>

</FrameLayout>
