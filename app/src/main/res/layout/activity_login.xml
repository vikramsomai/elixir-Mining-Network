<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="network.lynx.app.LoginActivity">

    <!-- Top Section with Welcome -->
    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="@dimen/spacing_xxl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomCard"
        app:layout_constraintHeight_min="180dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:contentDescription="App Logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_headline"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="@dimen/spacing_lg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to continue mining"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_body_small"
            android:layout_marginTop="@dimen/spacing_sm"/>

    </LinearLayout>

    <!-- Bottom Card with Form -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@color/cardBackground"
        app:cardCornerRadius="@dimen/corner_radius_xxl"
        app:cardElevation="@dimen/elevation_high"
        app:strokeWidth="0dp"
        android:layout_marginHorizontal="@dimen/spacing_sm"
        android:layout_marginBottom="@dimen/spacing_lg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xxl">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_display"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please login with your credentials"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/text_body_small"
                android:layout_marginTop="@dimen/spacing_xs"
                android:layout_marginBottom="@dimen/spacing_xxl"/>

            <!-- Email Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/text_caption"
                android:textStyle="bold"
                android:letterSpacing="0.05"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/cardBackgroundElevated"
                app:boxStrokeColor="@color/borderColor"
                app:boxStrokeWidth="1dp"
                app:boxCornerRadiusTopStart="@dimen/corner_radius_md"
                app:boxCornerRadiusTopEnd="@dimen/corner_radius_md"
                app:boxCornerRadiusBottomStart="@dimen/corner_radius_md"
                app:boxCornerRadiusBottomEnd="@dimen/corner_radius_md"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_lg"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/text_body"
                    android:hint="Enter your email"
                    android:textColorHint="@color/textTertiary"
                    android:paddingHorizontal="@dimen/spacing_lg"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/text_caption"
                android:textStyle="bold"
                android:letterSpacing="0.05"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:layout_marginBottom="@dimen/spacing_xxl"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/cardBackgroundElevated"
                app:boxStrokeColor="@color/borderColor"
                app:boxStrokeWidth="1dp"
                app:boxCornerRadiusTopStart="@dimen/corner_radius_md"
                app:boxCornerRadiusTopEnd="@dimen/corner_radius_md"
                app:boxCornerRadiusBottomStart="@dimen/corner_radius_md"
                app:boxCornerRadiusBottomEnd="@dimen/corner_radius_md"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/textTertiary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_lg"
                    android:inputType="textPassword"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/text_body"
                    android:hint="Enter your password"
                    android:textColorHint="@color/textTertiary"
                    android:paddingHorizontal="@dimen/spacing_lg"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginbtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_lg"
                android:text="Login"
                android:textSize="@dimen/text_body"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:backgroundTint="@color/colorPrimary"
                app:cornerRadius="@dimen/corner_radius_lg"
                app:rippleColor="@color/rippleLight"
                app:elevation="0dp"/>

            <!-- Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="@dimen/spacing_xl">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/borderColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="or"
                    android:textColor="@color/textTertiary"
                    android:textSize="@dimen/text_caption"
                    android:paddingHorizontal="@dimen/spacing_lg"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/borderColor"/>
            </LinearLayout>

            <!-- Google Sign In -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/googleSignUpBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_lg"
                android:textSize="@dimen/text_body"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:backgroundTint="@color/cardBackgroundElevated"
                app:cornerRadius="@dimen/corner_radius_lg"
                app:strokeColor="@color/borderColor"
                app:strokeWidth="1dp"
                app:icon="@drawable/search"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/spacing_md"
                app:iconSize="@dimen/icon_md"
                android:text="Continue with Google"/>

            <!-- Register Link -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/spacing_xxl">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account? "
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_body_small"/>

                <TextView
                    android:id="@+id/loginid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_body_small"
                    android:textStyle="bold"
                    android:padding="@dimen/spacing_xs"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>