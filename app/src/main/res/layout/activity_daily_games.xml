<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/screen_padding_horizontal">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="@dimen/icon_xl"
                android:layout_height="@dimen/icon_xl"
                android:background="@drawable/soft_card_background"
                android:padding="@dimen/spacing_sm"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                app:tint="@color/textPrimary"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Daily Games"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_title"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/soft_card_background"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/spacing_md"
                android:paddingVertical="@dimen/spacing_sm">

                <TextView
                    android:id="@+id/balanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="0.00 LYX"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/text_body_small"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- VIP Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/vipCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="VIP STATUS"
                        android:textColor="@color/textTertiary"
                        android:textSize="@dimen/text_overline"
                        android:letterSpacing="0.1" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/vipTierText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="ðŸ¥‰ Bronze"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/text_body"
                        android:textStyle="bold" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/vipProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:max="100"
                    android:progress="25"
                    android:progressDrawable="@drawable/progress_gradient" />

                <TextView
                    android:id="@+id/vipProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:text="250 / 500 to Silver"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_caption" />

                <TextView
                    android:id="@+id/vipPerksText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="âœ“ +5% Mining Bonus"
                    android:textColor="@color/accentGreen"
                    android:textSize="@dimen/text_caption"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Daily Number Prediction Game -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/predictionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/predictionTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Daily Number Prediction"
                            android:textColor="@color/textPrimary"
                            android:textSize="@dimen/text_body"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guess the lucky number (1-10)"
                            android:textColor="@color/textSecondary"
                            android:textSize="@dimen/text_caption" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_background_gold"
                        android:paddingHorizontal="@dimen/spacing_sm"
                        android:paddingVertical="@dimen/spacing_xs"
                        android:text="Win 25 LYX!"
                        android:textColor="@color/cardBackground"
                        android:textSize="@dimen/text_overline"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Number Picker -->
                <TextView
                    android:id="@+id/selectedNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:fontFamily="sans-serif-light"
                    android:text="5"
                    android:textColor="@color/colorPrimary"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/numberSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stepSize="1"
                    android:valueFrom="1"
                    android:valueTo="10"
                    android:value="5"
                    app:thumbColor="@color/colorPrimary"
                    app:trackColorActive="@color/colorPrimary"
                    app:trackColorInactive="@color/cardBackgroundElevated" />

                <TextView
                    android:id="@+id/predictionStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:gravity="center"
                    android:text="Already played today"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_caption"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/playPredictionBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_lg"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:fontFamily="sans-serif-medium"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="ðŸŽ¯ Predict &amp; Win"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="@dimen/corner_radius_md"
                    app:elevation="0dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Coin Flip Game -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/coinFlipCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸª™"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Coin Flip"
                            android:textColor="@color/textPrimary"
                            android:textSize="@dimen/text_body"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Double or Nothing!"
                            android:textColor="@color/textSecondary"
                            android:textSize="@dimen/text_caption" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_background_green"
                        android:paddingHorizontal="@dimen/spacing_sm"
                        android:paddingVertical="@dimen/spacing_xs"
                        android:text="2x WIN"
                        android:textColor="@color/cardBackground"
                        android:textSize="@dimen/text_overline"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Coin Image -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="@dimen/spacing_lg">

                    <ImageView
                        android:id="@+id/coinImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_coin"
                        app:tint="@color/gold"
                        android:contentDescription="Coin" />

                    <TextView
                        android:id="@+id/coinFlipResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:text=""
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/text_body"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </FrameLayout>

                <!-- Bet Amount Buttons -->
                <TextView
                    android:id="@+id/betAmountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Bet: 5 LYX"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_body_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/betLowBtn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_sm"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:text="5 LYX"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_caption"
                        app:backgroundTint="@color/cardBackgroundElevated"
                        app:cornerRadius="@dimen/corner_radius_sm"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/betMedBtn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_sm"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:text="15 LYX"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_caption"
                        app:backgroundTint="@color/cardBackgroundElevated"
                        app:cornerRadius="@dimen/corner_radius_sm" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/betHighBtn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_sm"
                        android:layout_weight="1"
                        android:text="30 LYX"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_caption"
                        app:backgroundTint="@color/cardBackgroundElevated"
                        app:cornerRadius="@dimen/corner_radius_sm" />
                </LinearLayout>

                <TextView
                    android:id="@+id/coinFlipStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text=""
                    android:textColor="@color/accentGreen"
                    android:textSize="@dimen/text_caption"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/flipBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_lg"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:fontFamily="sans-serif-medium"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="ðŸª™ FLIP"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold"
                    app:backgroundTint="@color/gold"
                    app:cornerRadius="@dimen/corner_radius_md"
                    app:elevation="0dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxxl" />

    </LinearLayout>
</ScrollView>

