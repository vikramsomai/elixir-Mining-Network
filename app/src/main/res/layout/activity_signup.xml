<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fillViewport="true"
    tools:context="network.lynx.app.SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Section with Welcome -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="@dimen/spacing_xxl"
            android:paddingTop="@dimen/spacing_xxxl"
            android:paddingBottom="@dimen/spacing_xl">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/logo"
                android:contentDescription="App Logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join Our Network"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_headline"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/spacing_lg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create account to start mining"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/text_body_small"
                android:layout_marginTop="@dimen/spacing_xs"/>

        </LinearLayout>

        <!-- Form Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="@dimen/corner_radius_xxl"
            app:cardElevation="@dimen/elevation_high"
            app:strokeWidth="0dp"
            android:layout_marginHorizontal="@dimen/spacing_sm"
            android:layout_marginBottom="@dimen/spacing_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_xxl">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Account"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/text_title"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fill in your details below"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_body_small"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:layout_marginBottom="@dimen/spacing_xl"/>

                <!-- Username Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_caption"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:layout_marginBottom="@dimen/spacing_md"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@color/cardBackgroundElevated"
                    app:boxStrokeColor="@color/borderColor"
                    app:boxStrokeWidth="1dp"
                    app:boxCornerRadiusTopStart="@dimen/corner_radius_md"
                    app:boxCornerRadiusTopEnd="@dimen/corner_radius_md"
                    app:boxCornerRadiusBottomStart="@dimen/corner_radius_md"
                    app:boxCornerRadiusBottomEnd="@dimen/corner_radius_md"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_lg"
                        android:inputType="textPersonName"
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/text_body"
                        android:hint="Choose a username"
                        android:textColorHint="@color/textTertiary"
                        android:paddingHorizontal="@dimen/spacing_lg"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_caption"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:layout_marginBottom="@dimen/spacing_md"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@color/cardBackgroundElevated"
                    app:boxStrokeColor="@color/borderColor"
                    app:boxStrokeWidth="1dp"
                    app:boxCornerRadiusTopStart="@dimen/corner_radius_md"
                    app:boxCornerRadiusTopEnd="@dimen/corner_radius_md"
                    app:boxCornerRadiusBottomStart="@dimen/corner_radius_md"
                    app:boxCornerRadiusBottomEnd="@dimen/corner_radius_md"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_lg"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/text_body"
                        android:hint="Enter your email"
                        android:textColorHint="@color/textTertiary"
                        android:paddingHorizontal="@dimen/spacing_lg"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_caption"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:layout_marginBottom="@dimen/spacing_md"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@color/cardBackgroundElevated"
                    app:boxStrokeColor="@color/borderColor"
                    app:boxStrokeWidth="1dp"
                    app:boxCornerRadiusTopStart="@dimen/corner_radius_md"
                    app:boxCornerRadiusTopEnd="@dimen/corner_radius_md"
                    app:boxCornerRadiusBottomStart="@dimen/corner_radius_md"
                    app:boxCornerRadiusBottomEnd="@dimen/corner_radius_md"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/textTertiary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_lg"
                        android:inputType="textPassword"
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/text_body"
                        android:hint="Create a password"
                        android:textColorHint="@color/textTertiary"
                        android:paddingHorizontal="@dimen/spacing_lg"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Referral Code Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Referral Code (Optional)"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_caption"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:layout_marginBottom="@dimen/spacing_lg"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@color/cardBackgroundElevated"
                    app:boxStrokeColor="@color/borderColor"
                    app:boxStrokeWidth="1dp"
                    app:boxCornerRadiusTopStart="@dimen/corner_radius_md"
                    app:boxCornerRadiusTopEnd="@dimen/corner_radius_md"
                    app:boxCornerRadiusBottomStart="@dimen/corner_radius_md"
                    app:boxCornerRadiusBottomEnd="@dimen/corner_radius_md"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/referral"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_lg"
                        android:inputType="text"
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/text_body"
                        android:hint="Enter referral code"
                        android:textColorHint="@color/textTertiary"
                        android:paddingHorizontal="@dimen/spacing_lg"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Terms Checkbox -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_xl">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/termsCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonTint="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/termsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I agree to the Terms and Conditions"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_caption"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

                <!-- Signup Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/signupBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_lg"
                    android:text="Create Account"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="@dimen/corner_radius_lg"
                    app:rippleColor="@color/rippleLight"
                    app:elevation="0dp"/>

                <!-- Divider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="@dimen/spacing_xl">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/borderColor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="or"
                        android:textColor="@color/textTertiary"
                        android:textSize="@dimen/text_caption"
                        android:paddingHorizontal="@dimen/spacing_lg"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/borderColor"/>
                </LinearLayout>

                <!-- Google Sign Up -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/googleSignUpBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_lg"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:backgroundTint="@color/cardBackgroundElevated"
                    app:cornerRadius="@dimen/corner_radius_lg"
                    app:strokeColor="@color/borderColor"
                    app:strokeWidth="1dp"
                    app:icon="@drawable/search"
                    app:iconGravity="textStart"
                    app:iconPadding="@dimen/spacing_md"
                    app:iconSize="@dimen/icon_md"
                    android:text="Continue with Google"/>

                <!-- Login Link -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/spacing_xl">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account? "
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_body_small"/>

                    <TextView
                        android:id="@+id/loginid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_body_small"
                        android:textStyle="bold"
                        android:padding="@dimen/spacing_xs"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
