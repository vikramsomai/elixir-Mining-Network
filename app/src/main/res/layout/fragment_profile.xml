<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/screen_padding_horizontal"
        android:paddingTop="@dimen/spacing_md"
        android:paddingBottom="@dimen/spacing_xxl">

        <!-- Settings Title -->
        <TextView
            android:layout_marginTop="@dimen/spacing_xl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xl"
            android:text="Settings"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_headline"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- General Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:text="GENERAL"
            android:textColor="@color/textTertiary"
            android:textSize="@dimen/text_overline"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:fontFamily="sans-serif-medium" />

        <!-- Account Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/accountCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/soft_icon_background"
                    android:padding="7dp"
                    android:src="@drawable/ic_account"
                    app:tint="@color/textSecondary"
                    android:contentDescription="Account icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Account"
                    android:textColor="@color/textPrimary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow"
                    app:tint="@color/textTertiary"
                    android:contentDescription="Arrow" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Support Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/supportCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/soft_icon_background"
                    android:padding="7dp"
                    android:src="@drawable/ic_support"
                    app:tint="@color/textSecondary"
                    android:contentDescription="Support icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Support"
                    android:textColor="@color/textPrimary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow"
                    app:tint="@color/textTertiary"
                    android:contentDescription="Arrow" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Other Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="OTHER"
            android:textColor="@color/textTertiary"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:fontFamily="sans-serif-medium" />

        <!-- Terms Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/termsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/soft_icon_background"
                    android:padding="7dp"
                    android:src="@drawable/ic_terms"
                    app:tint="@color/textSecondary"
                    android:contentDescription="Terms icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Terms &amp; Conditions"
                    android:textColor="@color/textPrimary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow"
                    app:tint="@color/textTertiary"
                    android:contentDescription="Arrow" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Privacy Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/privacyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/soft_icon_background"
                    android:padding="7dp"
                    android:src="@drawable/ic_terms"
                    app:tint="@color/textSecondary"
                    android:contentDescription="Privacy icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Privacy Policy"
                    android:textColor="@color/textPrimary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow"
                    app:tint="@color/textTertiary"
                    android:contentDescription="Arrow" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Rate Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/rateCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/soft_icon_background"
                    android:padding="7dp"
                    android:src="@drawable/ic_star"
                    app:tint="@color/gold"
                    android:contentDescription="Rate icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Rate &amp; Review"
                    android:textColor="@color/textPrimary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow"
                    app:tint="@color/textTertiary"
                    android:contentDescription="Arrow" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- FAQs Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/faqCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/soft_icon_background"
                    android:padding="7dp"
                    android:src="@drawable/ic_faq"
                    app:tint="@color/textSecondary"
                    android:contentDescription="FAQ icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="FAQs"
                    android:textColor="@color/textPrimary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow"
                    app:tint="@color/textTertiary"
                    android:contentDescription="Arrow" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Version Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Version 1.0.0"
            android:textColor="@color/textTertiary"
            android:textSize="11sp"
            android:fontFamily="sans-serif" />

    </LinearLayout>
</ScrollView>

