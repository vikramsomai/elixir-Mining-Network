<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/boostLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top App Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                app:tint="@color/textPrimary"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:contentDescription="Back"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Boost Center"
                android:textColor="@color/textPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- Current Mining Speed Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/soft_card_background"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Mining Speed"
                android:textColor="@color/textSecondary"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/farmingSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 / hours"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/boostStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x2 Boost Active"
                android:textColor="@color/accentGreen"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- Boost Tasks Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="Available Boosts"
            android:textColor="@color/textSecondary"
            android:textSize="13sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:fontFamily="sans-serif-medium"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/boostTasksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:clipToPadding="false"/>

        <!-- Active Boosts Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="Active Boosts"
            android:textColor="@color/textSecondary"
            android:textSize="13sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:fontFamily="sans-serif-medium"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/completedTasksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:clipToPadding="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

